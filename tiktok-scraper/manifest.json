{
    "manifest_version": 3,
    "name": "TikTok Comment Scraper",
    "version": "1.0",
    "description": "Scrape TikTok comments as CSV.",
    "permissions": ["scripting", "tabs", "clipboardWrite"],
    "host_permissions": ["https://www.tiktok.com/*"],
    "action": {
      "default_popup": "popup/popup.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "run_at": "document_idle"
      }
    ]
  }
  